                    <DataGridTextColumn x:Name="colLunes1" Header="Hora" Binding="{Binding hora}" Width="*"/>
                    <DataGridCheckBoxColumn x:Name="colCheckLunes1" Header="Activo" Binding="{Binding isActivo}" Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="gvMiercoles" HorizontalAlignment="Left" Margin="260,85,0,-13" VerticalAlignment="Top" Width="120" Height="342" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colLunes2" Header="Hora" Binding="{Binding hora}" Width="*"/>
                    <DataGridCheckBoxColumn x:Name="colCheckLunes2" Header="Activo" Binding="{Binding isActivo}" Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="gvJueves" HorizontalAlignment="Left" Margin="380,86,0,-14" VerticalAlignment="Top" Width="120" Height="342" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colLunes3" Header="Hora" Binding="{Binding hora}" Width="*"/>
                    <DataGridCheckBoxColumn x:Name="colCheckLunes3" Header="Activo" Binding="{Binding isActivo}" Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="gvViernes" HorizontalAlignment="Left" Margin="505,86,0,-14" VerticalAlignment="Top" Width="120" Height="342" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colLunes4" Header="Hora" Binding="{Binding hora}" Width="*"/>
                    <DataGridCheckBoxColumn x:Name="colCheckLunes4" Header="Activo" Binding="{Binding isActivo}" Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="gvSabado" HorizontalAlignment="Left" Margin="625,86,0,-14" VerticalAlignment="Top" Width="120" Height="342" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colLunes5" Header="Hora" Binding="{Binding hora}" Width="*"/>
                    <DataGridCheckBoxColumn x:Name="colCheckLunes5" Header="Activo" Binding="{Binding isActivo}" Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
            <DataGrid x:Name="gvDomingo" HorizontalAlignment="Left" Margin="750,86,0,-14" VerticalAlignment="Top" Width="120" Height="342" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colLunes6" Header="Hora" Binding="{Binding hora}" Width="*"/>
                    <DataGridCheckBoxColumn x:Name="colCheckLunes6" Header="Activo" Binding="{Binding isActivo}" Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
            <Label x:Name="lblTitlesDias" Content="Lunes                     Martes                     Miercoles                     Jueves                     Viernes                     Sábado                     Domingo" HorizontalAlignment="Left" Margin="48,58,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
