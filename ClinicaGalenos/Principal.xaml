        </Grid>
        <Grid x:Name="gridMenuMedicos" HorizontalAlignment="Left" Height="462" Margin="22,178,0,-609" VerticalAlignment="Top" Width="883" d:IsHidden="True">
            <Label x:Name="lblPacientesHoy" Content="Pacientes de hoy" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <DataGrid x:Name="gvPacientes" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="569" Height="387" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colIdP" Header="id" Binding="{Binding Path=id}" Width="*"/>
                    <DataGridTextColumn x:Name="colNameFull" Header="Nombre" Binding="{Binding Path=fullName}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        <TextBox x:Name="txt_userid" HorizontalAlignment="Left" Height="23" Margin="862,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
